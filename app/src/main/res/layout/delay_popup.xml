<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:layout_marginBottom="@dimen/_20sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/alert_dialog_shape"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/_12sdp">

        <TextView
            android:id="@+id/p15min"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Postpone for 15 min."
            android:textAlignment="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:textSize="@dimen/_14sdp"
            android:textColor="@color/colorPrimary"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray"
            android:layout_marginTop="@dimen/_7sdp"
            android:layout_marginBottom="@dimen/_7sdp"/>

        <TextView
            android:id="@+id/p30min"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Postpone for 30 min."
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_14sdp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray"
            android:layout_marginTop="@dimen/_7sdp"
            android:layout_marginBottom="@dimen/_7sdp"/>

        <TextView
            android:id="@+id/p1hour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Postpone for 1 hour"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:layout_marginBottom="@dimen/_10sdp"
            android:textSize="@dimen/_14sdp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/alert_dialog_shape"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/cancelTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textAlignment="center"
            android:textColor="@color/red"
            android:layout_marginTop="@dimen/_7sdp"
            android:layout_marginBottom="@dimen/_7sdp"
            android:textSize="@dimen/_14sdp"/>
    </LinearLayout>
</LinearLayout>